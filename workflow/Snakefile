configfile: "config/config.yaml"
    
rule all:
    input:
        expand('results/{sample}_prediction_results.tsv',
               sample=config["sample_name"])

rule hmmsearch:
    input:
        "{sample_name}.fasta"
    output:
        "results/{sample_name}_{db}_dom.tbl",
        "results/{sample_name}_{db}_dom.out"
    conda:
        "envs/main_env.yaml"
    params:
        db = "{db}"
    shell:
        "hmmsearch --domtblout {output[0]} resources/{params.db}_dom_hmms.hmm "
        "{input[0]} > {output[1]}"
        
rule adapt_hmm_results:
    input:
        "results/{sample_name}_{db}_dom.tbl"
    output:
        "results/{sample_name}_{db}_dom_adapted.tbl"
    conda:
        "envs/main_env.yaml"
    shell:
        "python3.7 workflow/scripts/make_out_readable.py --fh_in {input} "
        "--fh_out {output}"

rule treks:
    input:
        "{sample_name}.fasta"
    output:
        "results/{sample_name}_treks.tsv",
        "results/{sample_name}_treks.aln"
    conda:
        "envs/main_env.yaml"
    log:
        "results/{sample_name}_treks.log"
    shell:
        "java -Xmx4G -jar workflow/scripts/T-ReksHPC.jar -f {input} -t "
        "{output[0]} -a {output[1]} -m muscle -s 0.7 -S 5 -L 50 > {log}"

rule inmembrane:
    input:
        "{sample_name}.fasta"
    output:
        "{sample_name}.csv",
        # "results/{sample_name}_PSE_cellwall.csv",
        directory("{sample_name}/")
    conda:
        "envs/inmembrane_env.yaml"
    shell:
        "inmembrane_scan {input[0]}"
        # "inmembrane_scan {input[0]} | "
        # "mv {output[0]} {output[1]} | "
        # "rm -r {wildcards.sample_name}/"


rule inmembrane_adapt:
    input:
        "{sample_name}.csv"
    output:
        "results/{sample_name}_PSE_cellwall.csv"
    conda:
        "envs/main_env.yaml"
    shell:
        "mv {input[0]} {output[0]} | "
        "rm -r {wildcards.sample_name}/"
        
